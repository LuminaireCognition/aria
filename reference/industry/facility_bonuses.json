  "job_cost_formula": {
    "_description": "Total job cost = Estimated Item Value × (System Cost Index × (1 - Facility Bonus) + Taxes)",
    "components": {
      "estimated_item_value": "Sum of adjusted prices for all inputs, calculated by CCP",
      "system_cost_index": "Varies by system based on job activity (0-50%+)",
      "facility_bonus": "Structure bonus to job costs (typically 0-5%)",
      "scc_surcharge": "4% of EIV - goes to SCC/CCP",
      "facility_tax": "Set by structure owner (0-50%)",
      "npc_facility_tax": "0.25% for NPC stations"
    },
    "calculation": "job_cost = EIV × system_index × (1 - facility_bonus) + EIV × scc_surcharge + EIV × facility_tax"
  },

  "taxes": {
    "scc_surcharge": {
      "rate": 0.04,
      "description": "Smart Cluster Charge - mandatory 4% on all jobs"
    },
    "npc_facility_tax": {
      "rate": 0.0025,
      "description": "NPC station tax - 0.25% of EIV"
    },
    "player_facility_tax": {
      "rate_range": [0, 0.50],
      "default": 0.10,
      "description": "Set by structure owner. Common range 0-15%."
    }
  },

  "system_cost_index_examples": {
