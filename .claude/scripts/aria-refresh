#!/bin/bash
# ARIA Token Refresh - Shell Wrapper
# Convenience script to refresh EVE SSO tokens

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_SCRIPT="$SCRIPT_DIR/aria-token-refresh.py"

# Find Python 3
if command -v python3 &> /dev/null; then
    PYTHON=python3
elif command -v python &> /dev/null; then
    PYTHON=python
else
    echo "ARIA ALERT: Python not found. Cannot refresh tokens."
    exit 1
fi

# Set project dir for the script
export CLAUDE_PROJECT_DIR="$(dirname "$(dirname "$SCRIPT_DIR")")"

# Run the Python script with all arguments
exec "$PYTHON" "$PYTHON_SCRIPT" "$@"
